{
  "name": "qachallenge",
  "version": "1.0.0",
  "description": "QA Onboarding challenge",
  "main": "index.js",
  "scripts": {
    "test": "npx playwright test tests/session.spec.js",
    "debugapi": "npx playwright test tests/apiLogin.spec.js",
